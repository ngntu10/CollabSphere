root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_cast = true
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_around_binary_operators = before_and_after
resharper_csharp_keep_existing_attribute_arrangement = false
resharper_csharp_keep_existing_arrangement = false
resharper_keep_existing_attribute_arrangement = false
resharper_keep_existing_arrangement = false
resharper_csharp_place_type_attribute_on_same_line = never
resharper_csharp_place_attribute_on_same_line = never
resharper_place_type_attribute_on_same_line = never
resharper_place_attribute_on_same_line = never

